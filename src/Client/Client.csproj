<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>VictorFrye.$(SolutionName).$(MSBuildProjectName)</AssemblyName>
    <RootNamespace>VictorFrye.$(SolutionName).$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
    <Title>Microsoft Graveyard</Title>
    <Description>ðŸª¦ A graveyard of all the dead products from Microsoft</Description>
    <RepositoryUrl>https://github.com/victorfrye/microsoft-graveyard</RepositoryUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://microsoftgraveyard.com</PackageProjectUrl>
    <Authors>VictorFrye</Authors>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
